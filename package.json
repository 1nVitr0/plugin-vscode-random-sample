{
  "name": "random-sample",
  "displayName": "Random Sample",
  "description": "Sample single or multiple lines from a file",
  "author": "1nVitr0",
  "publisher": "1nVitr0",
  "repository": {
    "type": "git",
    "url": "https://github.com/1nVitr0/plugin-vscode-random-sample.git"
  },
  "icon": "resources/icon.png",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "sort",
    "format",
    "block",
    "order",
    "block sort"
  ],
  "activationEvents": [
    "onCommand:randomSample.selectSample",
    "onCommand:randomSample.selectSampleSingle",
    "onCommand:randomSample.sampleFromFile",
    "onCommand:randomSample.sampleFromFileSingle"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "randomSample.selectSample",
        "title": "Select random Sample",
        "category": "Random",
        "icon": {
          "dark": "resources/icon_asc_dark.svg",
          "light": "resources/icon_asc.svg"
        }
      },
      {
        "command": "randomSample.selectSampleSingle",
        "title": "Select random Line",
        "category": "Random",
        "icon": {
          "dark": "resources/icon_asc_dark.svg",
          "light": "resources/icon_asc.svg"
        }
      },
      {
        "command": "randomSample.sampleFromFile",
        "title": "Sample from File",
        "category": "Random",
        "icon": {
          "dark": "resources/icon_asc_dark.svg",
          "light": "resources/icon_asc.svg"
        }
      },
      {
        "command": "randomSample.sampleFromFileSingle",
        "title": "Sample single item from File",
        "category": "Random",
        "icon": {
          "dark": "resources/icon_asc_dark.svg",
          "light": "resources/icon_asc.svg"
        }
      }
    ],
    "configuration": [
      {
        "title": "Random Sample",
        "properties": {}
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.10",
    "@types/vscode": "1.53",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.0",
    "semantic-release": "^19.0.2",
    "semantic-release-vsce": "^5.0.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "vscode-test": "^1.6.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.1"
  },
  "release": {
    "branches": [
      "main",
      "develop"
    ],
    "verifyConditions": [
      "semantic-release-vsce",
      "@semantic-release/github"
    ],
    "prepare": {
      "path": "semantic-release-vsce",
      "packageVsix": true
    },
    "publish": [
      "semantic-release-vsce",
      {
        "path": "@semantic-release/github",
        "assets": "*.vsix"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}",
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "README.md"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "random-item": "^4.0.1"
  }
}
